                </shape>
            </item>

            <item
                android:left="4dp"
                android:right="4dp"
                android:top="0dp"
                android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#15000000"/>
                    <corners android:radius="6dp"/>
                </shape>
            </item>

            <item
                android:left="5dp"
                android:right="5dp"
                android:top="0dp"
                android:bottom="5dp">
