            </item>

            <item
                android:left="7dp"
                android:right="7dp"
                android:top="0dp"
                android:bottom="7dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryDark"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>